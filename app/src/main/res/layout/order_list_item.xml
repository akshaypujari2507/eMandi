<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/size_24dp"
    android:paddingBottom="@dimen/size_24dp"
    android:paddingLeft="@dimen/size_16dp"
    android:paddingRight="@dimen/size_16dp">

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/size_16sp"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/size_24dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_product_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_no"
        app:layout_constraintLeft_toLeftOf="@+id/tv_order_no"/>

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_20sp"
        android:textStyle="bold"
        android:drawablePadding="@dimen/size_8dp"
        android:drawableRight="@drawable/black_right_arrow_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_order_no"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_time"/>


</androidx.constraintlayout.widget.ConstraintLayout>